#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/autoreconf.mk
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/utils.mk
include /usr/share/cdbs/1/class/gnome.mk
include /usr/share/gnome-pkg-tools/1/rules/uploaders.mk
include /usr/share/gnome-pkg-tools/1/rules/gnome-get-source.mk

LDFLAGS += -Wl,-O1 -Wl,-z,defs -Wl,--warn-unresolved-symbols -Wl,--as-needed

DEB_DH_MAKESHLIBS_ARGS_ALL += --no-act
DEB_CONFIGURE_EXTRA_FLAGS = --disable-systemd --disable-packagekit

build/cinnamon-settings-daemon::
	gcc -o cinnamon-settings-daemon/cinnamon-update-wallpaper-cache debian/cinnamon-update-wallpaper-cache.c `pkg-config --cflags --libs glib-2.0 gdk-3.0 gdk-x11-3.0 gio-2.0 gnome-desktop-3.0`

install/cinnamon-settings-daemon::
	/usr/bin/install -c cinnamon-settings-daemon/cinnamon-update-wallpaper-cache 'debian/tmp/usr/lib/cinnamon-settings-daemon'
	install -m 644 -D debian/cinnamon-settings-daemon.user-session.upstart debian/cinnamon-settings-daemon/usr/share/upstart/sessions/cinnamon-settings-daemon.conf
	install -m 644 -D debian/cinnamon-settings-daemon.user-session.desktop debian/cinnamon-settings-daemon/usr/share/upstart/xdg/autostart/cinnamon-settings-daemon.desktop

binary-install/cinnamon-settings-daemon::
	find debian -name '*.a' -delete
	find debian -name '*.la' -delete

common-binary-post-install-arch:: list-missing

clean::
	rm -f cinnamon-settings-daemon/cinnamon-update-wallpaper-cache

